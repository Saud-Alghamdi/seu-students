<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
    <title>Posts</title>
  </head>
  <body class="d-flex flex-column gap-4">
    <%- include('partials/nav.ejs') %>

    <!-- Loader -->
    <div id="loader-container" class="visually-hidden">
      <div id="loader"></div>
    </div>

    <main class="add-post-page-container__main container flex-grow-1 text-light">
      <header class="text-center">
        <h1>Add Post:</h1>
      </header>

      <form enctype="multipart/form-data" class="add-post-page-container__form mt-4 bg-secondary p-4 rounded-5 mx-auto">
        <div class="mb-3">
          <label for="" class="form-label">Title:</label>
          <input name="title" type="text" class="title-input form-control" id="title" />
          <span class="error-message error-message-title-input"></span>
        </div>
        <div class="mb-3">
          <label for="document" class="form-label">Document: <small>(Only accepts PDF, Word, Powerpoint)</small></label>
          <input type="file" class="file-input" accept=".pdf, .ppt, .pptx, .doc, .docx" />
          <span class="error-message error-message-file-input"></span>
        </div>
        <button id="submitButton" type="submit" class="add-post-page-container__button btn btn-lg d-block mx-auto mt-4">Submit</button>
      </form>
    </main>

    <%- include('partials/footer.ejs') %>

    <!-- Send file to server -->
    <script src="/js/sendFileToServer.js"></script>
    <!-- Loader -->
    <script src="/js/loader.js"></script>
  </body>
</html>
