<html dir="<%=langDirection%>">
  <head>
    <%- include('partials/head.ejs') %>
    <title><%=langData.departmentsPage_TITLE%></title>
  </head>
  <body class="d-flex flex-column">
    <%- include('partials/nav.ejs') %>

    <!-- Loader -->
    <div id="loader-container" class="visually-hidden">
      <div id="loader"></div>
    </div>

    <main class="container position-relative flex-grow-1 text-light my-4">
      <!-- Back link -->
      <% if(langDirection === 'rtl') { %>
      <a class="link back-link position-absolute text-light mt-3" onclick="history.back()">
        <i class="fas fa-reply fa-lg fa-flip-horizontal"></i>
      </a>
      <% } else { %>
      <a class="link back-link position-absolute text-light mt-3" onclick="history.back()">
        <i class="fas fa-reply fa-lg"></i>
      </a>
      <% } %>

      <header class="text-center">
        <h1><%=langData.departmentsPage_HEADER%></h1>
      </header>

      <div class="departments-container departments-courses-layout container mt-5">
        <div class="departments-row row justify-content-evenly gap-1">
          <a class="department-course-col col d-flex text-center justify-content-center align-items-center rounded-5 fs-4 text-decoration-none text-light" href="/departments/CS/courses"><%=langData.departmentsPage_COMPUTER_SCIENCE%></a>

          <a class="department-course-col col d-flex text-center justify-content-center align-items-center rounded-5 fs-4 text-decoration-none text-light" href="/departments/IT/courses"><%=langData.departmentsPage_INFORMATION_TECHNOLOGY%></a>

          <a class="department-course-col col d-flex text-center justify-content-center align-items-center rounded-5 fs-4 text-decoration-none text-light" href="/departments/DS/courses"><%=langData.departmentsPage_DATA_SCIENCE%></a>
        </div>
      </div>
    </main>

    <%- include('partials/footer.ejs') %>
  </body>
</html>
