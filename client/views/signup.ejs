<html dir="rtl">
  <head>
    <%- include('partials/head.ejs') %>
    <title>SEU Students</title>
  </head>
  <body class="d-flex flex-column">
    <%- include('partials/nav.ejs') %>

    <main class="signup-page-container__main position-relative container flex-grow-1 text-light my-4">
      <!-- Back link -->
      <a class="text-light text-decoration-none position-absolute" id="back-link" href="#" onclick="history.back()">
        <i class="fa-sharp fa-solid fa-arrow-right-long"></i>
      </a>

      <header class="text-center">
        <h1>التسجيل:</h1>
      </header>

      <!-- If sign up failed -->
      <% if(typeof signupSuccess !== 'undefined' && signupSuccess === false && typeof toastMsg !== 'undefined') { %>
      <script>
        showToast(false, "<%= toastMsg %>");
      </script>
      <% } %>

      <form action="/signup-process" method="POST" class="form signup-page-container__form mt-4 bg-secondary p-4 rounded-5 mx-auto">
        <div class="form__input-group mb-3">
          <label for="" class="form-label">اسم المستخدم:</label>
          <input name="username" type="text" class="input-field field username-field form-control" minlength="3" maxlength="25" />
          <span class="error-message"></span>
        </div>
        <div class="form__input-group mb-3">
          <label for="" class="form-label">البريد الإلكتروني:</label>
          <input name="email" type="email" class="input-field field email-field form-control" aria-describedby="emailHelp" />
          <span class="error-message"></span>
        </div>
        <div class="form__input-group mb-3">
          <label for="" class="form-label">كلمة المرور:</label>
          <input name="password" type="password" class="input-field field password-field form-control" id="password-field" minlength="6" maxlength="30" />
          <span class="error-message"></span>
        </div>
        <div class="form__input-group mb-3">
          <label for="" class="form-label">إعادة كتابة كلمة المرور:</label>
          <input name="repeat-password" type="password" class="input-field field repeat-password-field form-control" id="repeat-password-field" minlength="6" maxlength="30" />
          <span class="error-message"></span>
        </div>
        <div class="form__input-group">
          <span class="error-message"></span>
          <label class="mb-2" for="">الجنس:</label>
          <div class="form-check">
            <label class="form-check-label" for="male-radio">ذكر</label>
            <input name="gender" id="male-radio" class="input-field radio-field male-radio-field form-check-input" type="radio" value="male" />
          </div>
          <div class="form-check mb-3">
            <label class="form-check-label" for="female-radio">أنثى</label>
            <input name="gender" id="female-radio" class="input-field radio-field female-radio-field form-check-input" type="radio" value="female" />
          </div>
        </div>
        <button type="submit" class="signup-page-container__button btn btn-lg d-block mx-auto mt-4">التسجيل</button>
      </form>
    </main>

    <%- include('partials/footer.ejs') %>
  </body>
  <!-- Sign up Form Validator -->
  <script src="/js/SignupFormValidator.js"></script>
</html>
