<html dir="rtl">
  <head>
    <%- include('partials/head.ejs') %>
    <title>Courses</title>
  </head>
  <body class="d-flex flex-column">
    <%- include('partials/nav.ejs') %>

    <main class="departments-page-container__main container position-relative flex-grow-1 text-center text-light my-4">
      <!-- Back link -->
      <a class="text-light text-decoration-none position-absolute" id="back-link" href="#" onclick="history.back()">
        <i class="fa-sharp fa-solid fa-arrow-right-long"></i>
      </a>

      <header>
        <% if(depAbbr === 'CS') { %>
        <h1>مواد علوم الحاسب:</h1>
        <% } else if(depAbbr === 'IT') { %>
        <h1>مواد تقنية المعلومات:</h1>
        <% } else if(depAbbr === 'DS') { %>
        <h1>مواد علوم البيانات:</h1>
        <% } %>
      </header>

      <div class="departments-flex-container mt-5 d-flex justify-content-center flex-wrap">
        <% if(typeof courses !== 'undefined') { %> <% courses.forEach(course => { %>

        <div class="departments-page-container__div-box border-dark rounded-5 p-2 m-1">
          <a class="department-link d-flex justify-content-center align-items-center text-light fs-3" href="./<%=course.id%>/posts"><%= course.code %></a>
        </div>

        <% }) %> <% } %>
      </div>
    </main>

    <%- include('partials/footer.ejs') %>
  </body>
</html>
