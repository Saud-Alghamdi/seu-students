<html dir="rtl">
  <head>
    <%- include('partials/head.ejs') %>
    <title>تسجيل الدخول</title>
  </head>
  <body class="d-flex flex-column">
    <%- include('partials/nav.ejs') %>

    <main class="login-page-container__main container position-relative flex-grow-1 text-light my-4">
      <!-- Back link -->
      <a class="text-light text-decoration-none position-absolute" id="back-link" onclick="history.back()">
        <i class="fa-sharp fa-solid fa-arrow-right-long"></i>
      </a>

      <header class="text-center">
        <h1><%=langData.LOGIN%></h1>
      </header>

      <!-- Signup successful or Logout successful -->
      <% if(typeof signupSuccess !== 'undefined' || typeof logoutSuccess !== 'undefined' && typeof toastMsg !== 'undefined') { %>
      <script>
        showToast(true, "<%= toastMsg %>");
      </script>
      <% } %>

      <!-- Reset password sent successfully -->
      <% if(typeof sendResetPasswordSuccess !== 'undefined' && sendResetPasswordSuccess === true) { %>
      <script>
        showToast(true, "<%= toastMsg %>");
      </script>
      <% } %>

      <!-- Reset password sent successfully -->
      <% if(typeof sendResetPasswordSuccess !== 'undefined' && sendResetPasswordSuccess === false) { %>
      <script>
        showToast(false, "<%= toastMsg %>");
      </script>
      <% } %>

      <!-- incorrect login credentials -->
      <% if(typeof loginSuccess !== 'undefined' && loginSuccess === false && typeof toastMsg !== 'undefined') { %>
      <script>
        showToast(false, "<%= toastMsg %>");
      </script>
      <% } %>

      <form action="/login-process" method="POST" class="login-page-container__form mt-4 bg-secondary p-4 rounded-5 mx-auto">
        <div class="mb-3">
          <label for="" class="form-label"><%=langData.USERNAME_OR_EMAIL%></label>
          <input name="usernameOrEmail" type="text" class="form-control" id="" />
        </div>
        <div class="mb-3">
          <label for="" class="form-label"><%=langData.PASSWORD%></label>
          <input name="password" type="password" class="form-control" id="" />
        </div>
        <a class="reset-password-link d-block mb-2" href="/reset-password"><%=langData.FORGOT_PASSWORD%></a>
        <a class="signup-link" href="/signup"><%=langData.DONT_HAVE_ACCOUNT%></a>
        <button type="submit" class="login-page-container__button btn btn-lg d-block mx-auto mt-4"><%=langData.LOGIN%></button>
      </form>
    </main>

    <%- include('partials/footer.ejs') %>
  </body>
</html>
