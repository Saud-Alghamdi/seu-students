<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
    <title>SEU Students</title>
  </head>
  <body class="d-flex flex-column">
    <%- include('partials/nav.ejs') %>

    <main class="login-page-container__main container flex-grow-1 text-light my-4">
      <header class="text-center">
        <h1>Login</h1>
      </header>

      <!-- Signup successful -->
      <% if(typeof success !== 'undefined' && success === true) { %>
      <h4 class="text-warning text-center"><%= msg %></h4>
      <% } %>

      <!-- Login credentials error -->
      <% if(typeof success !== 'undefined' && success === false) { %>
      <div class="server-side-error-div border border-danger rounded-3 px-4 mx-auto mt-3">
        <p class="server-side-error-msg mt-2">
          <strong><%= msg %></strong>
        </p>
      </div>
      <% } %>

      <form action="/login-process" method="POST" class="login-page-container__form mt-4 bg-secondary p-4 rounded-5 mx-auto">
        <div class="mb-3">
          <label for="" class="form-label">Username:</label>
          <input name="username" type="text" class="form-control" id="" />
        </div>
        <div class="mb-3">
          <label for="" class="form-label">Password:</label>
          <input name="password" type="password" class="form-control" id="" />
        </div>
        <button type="submit" class="login-page-container__button btn btn-lg d-block mx-auto mt-4">Log in</button>
      </form>
    </main>

    <%- include('partials/footer.ejs') %>
  </body>
</html>
